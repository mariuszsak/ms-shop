// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cart {
  id       Int        @id @default(autoincrement())
  User     User[]
  CartItem CartItem[]
}

model User {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  email  String  @unique
  cart   Cart    @relation(fields: [cartId], references: [id])
  cartId Int
  Order  Order[]
}

model CartItem {
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  cartId    Int
  productId Int

  @@id([cartId, productId])
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       BigInt
  CartItem    CartItem[]
  Order       Order[]
}

model Order {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  productId Int
  userId    Int
}
