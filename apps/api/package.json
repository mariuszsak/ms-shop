{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --config nodemon.json ./src/server.ts",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "test": "jest --coverage --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.14",
    "nodemon": "^2.0.7",
    "prisma": "2.18.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@prisma/client": "2.18.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
